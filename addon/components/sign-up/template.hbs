<article class="sign-up">
    <div class="col-sm-5 toggle-box toggle-box-right toggle-box-active p-h-lg" style="height: auto;">
        <form class="form-horizontal">
            <h3 class="m-b-lg"> {{t 'eosf.signup.formTitle'}} </h3>
            <div class="form-group">
                <label for={{elem-id this 'signup-input-name'}} class="col-sm-4 control-label">{{t 'eosf.signup.labelInputName'}}</label>
                <div class="col-sm-8">
                    <input
                    type="text"
                    class="form-control"
                    id={{elem-id this 'signup-input-name'}}
                    placeholder={{t 'eosf.signup.labelInputName'}}
                    autofocus
                    required
                    aria-required="true"
                    >
                </div>
            </div>
            <div class="form-group">
                <label for={{elem-id this 'signup-input-email'}} class="col-sm-4 control-label">{{t 'eosf.signup.labelInputEmail'}}</label>
                <div class="col-sm-8">
                    <input
                    type="email"
                    class="form-control"
                    id={{elem-id this 'signup-input-email'}}
                    placeholder={{t 'eosf.signup.labelInputEmail'}}
                    required
                    aria-required="true"
                    >
                </div>
            </div>
            <div class="form-group">
                <label for={{elem-id this 'signup-input-confirm-email'}}  class="col-sm-4 control-label">{{t 'eosf.signup.labelConfirmEmail'}}</label>
                <div class="col-sm-8">
                    <input
                    type="email"
                    class="form-control"
                    id={{elem-id this 'signup-input-confirm-email'}}
                    placeholder={{t 'eosf.signup.placeholderConfirmEmail'}}
                    required
                    aria-required="true"
                    >
                </div>
            </div>
            <div class="form-group">
                <label for={{elem-id this 'signup-input-password'}}  class="col-sm-4 control-label">{{t 'eosf.signup.labelInputPassword'}}</label>
                <div class="col-sm-8">
                    <input
                    type="password"
                    class="form-control"
                    id={{elem-id this 'signup-input-password'}}
                    placeholder={{t 'eosf.signup.labelInputPassword'}}
                    required
                    aria-required="true"
                    >
                </div>
            </div>
            <div>
                <p>{{t 'eosf.signup.textTosNotice'}}</p>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn pull-right btn-success">{{t 'eosf.signup.buttonSubmit'}}</button>
                </div>
            </div>
        </form>
    </div>
    <p>{{yield}}</p>
</article>
