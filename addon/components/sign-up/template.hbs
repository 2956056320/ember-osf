<article class="sign-up">
    <div class="col-sm-5 toggle-box toggle-box-right toggle-box-active p-h-lg" style="height: auto;">
        <form class="form-horizontal">
            <h3 class="m-b-lg"> {{t 'eosf.signup.formTitle'}} </h3>
            <div class="form-group">
                <label for="inputName" class="col-sm-4 control-label">{{t 'eosf.signup.labelFullName'}}</label>
                <div class="col-sm-8">
                    <input
                    type="text"
                    class="form-control"
                    id="inputName"
                    placeholder={{t 'eosf.signup.labelFullName'}}
                    >
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-sm-4 control-label">{{t 'eosf.signup.labelEmail'}}</label>
                <div class="col-sm-8">
                    <input
                    type="text"
                    class="form-control"
                    id="inputEmail"
                    placeholder={{t 'eosf.signup.labelEmail'}}
                    >
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail2" class="col-sm-4 control-label">{{t 'eosf.signup.labelConfirmEmail'}}</label>
                <div class="col-sm-8">
                    <input
                    type="text"
                    class="form-control"
                    id="inputEmail2"
                    placeholder={{t 'eosf.signup.placeholderConfirmEmail'}}
                    >
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-4 control-label">{{t 'eosf.signup.labelPassword'}}</label>
                <div class="col-sm-8">
                    <input
                    type="password"
                    class="form-control"
                    id="inputPassword3"
                    placeholder={{t 'eosf.signup.labelPassword'}}
                    >
                </div>
            </div>
            <div>
                <p>{{t 'eosf.signup.textTosNotice'}}</p>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn pull-right btn-success">{{t 'eosf.signup.buttonCreateAccount'}}</button>
                </div>
            </div>
        </form>
    </div>
    <p>{{yield}}</p>
</article>
