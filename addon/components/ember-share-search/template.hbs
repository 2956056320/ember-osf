{{!Component builds DISCOVER PAGE - Blend of Ember-SHARE and Preprints Discover pages}}
<div class="container">
    <div class="search-header">
        <div class="row m-v-md"> {{!LOGO}}
            <div class="col-xs-12 text-center">
                {{#if pageHeader}}
                    <h1 class="service-name"> {{pageHeader}}</h1> {{!TEXT HEADER FOR PARTICULAR SERVICE}}
                {{else}}
                     <h1 class="service-logo"></h1> {{!LOGO FOR PARTICULAR SERVICE - ADD IN YOUR CLIENT APPLICATION}}
                {{/if}}
            </div>
        </div>

        <div class="row m-t-md m-b-lg text-center"> {{!SEARCH}}
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <div class="input-group input-group-lg"> {{!SEARCH BAR}}
                    {{input id="searchBox" value=q class="form-control" key-up='typing' placeholder=searchPlaceholder}}
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"> {{searchButton}} </button>
                    </span>
                </div>
                {{!POWERED BY SHARE}}
                <p class="lead">{{poweredBy}} <a href="https://share.osf.io/" class="share-logo" title="SHARE"></a></p>
            </div>
        </div>

        <div class="row p-v-sm">
            <div class="col-xs-12">
                <span class="pull-right"> {{!SORT BY}}
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="sortBy" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="true">
                            Sort by: {{sort-option-display sortOptions sort}}
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="sortBy">
                            {{#each sortOptions as |sortChoice|}}
                                <li style="cursor: pointer; cursor: hand"><a {{action "selectSortOption" sortChoice.sortBy}}>{{sortChoice.display}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </span>
            </div>
        </div>

    </div>
</div>
<div class="search-below-the-fold">
    <div class="container">
        <div class='results-top'>
            <div class="row search-results-section p-v-lg">
                <div class="col-sm-4 col-xs-12 faceted-search-item-bar"> {{!LEFT PANEL - FILTER}}
                    {{! ACTIVE Filters}}
                    {{#if showActiveFilters}}
                        <div id="activeFilters" class="well well-sm p-md">
                            <div class="row">
                                <div class="col-sm-6">
                                    <h4>{{t "eosf.components.emberShareSearch.activeFilters.heading"}}:</h4>
                                </div>
                                <div class="col-sm-6">
                                    <span class="pull-right">
                                        <button type="button" class="btn btn-default btn-sm" {{action "clearFilters"}}>{{t "eosf.components.emberShareSearch.activeFilters.button"}} {{fa-icon "remove"}}</button>
                                    </span>
                                </div>
                            </div>
                            <div id="activeFiltersList">
                                {{#each activeFilters.providers as |filter|}}
                                    <span class='preprint-filter provider-filter'>
                                        {{filter-replace filter}}
                                        {{#unless theme.isProvider}}
                                            <span class='pointer'>{{fa-icon 'times-circle' click=(action 'updateFilters' 'providers' filter)}}</span>
                                        {{/unless}}
                                    </span>
                                {{/each}}
                                {{#each activeFilters.subjects as |filter|}}
                                    <span class='preprint-filter subject-filter'>{{filter}} <span class='pointer'>{{fa-icon 'times-circle' click=(action 'updateFilters' 'subjects' filter)}}</span></span>
                                {{/each}}
                            </div>
                        </div>
                    {{/if}}

                    {{faceted-search
                        onChange='filtersChanged'
                        updateParams='updateParams'
                        filters=facetFilters
                        facetStates=facetStates
                        facets=facets
                        aggregations=aggregations
                        activeFilters=activeFilters
                        updateFilters=(action 'updateFilters')
                    }}
                </div>

                <div class="col-sm-8 col-xs-12">  {{!RIGHT PANEL - SEARCH RESULTS}}
                    {{#if loading}}
                        <div class="text-center p-v-md">
                            {{fa-icon 'spinner' pulse=true size=3}}
                        </div>
                    {{else if noResultsMessage}}
                        <div class="text-center no-results">{{noResultsMessage}}</div>
                    {{else}}
                        {{#each results as |result|}}
                            {{search-result detailRoute=detailRoute filterReplace=filterReplace addFilter='addFilter' result=result}}
                        {{/each}}
                        <div class="pull-right text-right pagination-format p-xs">
                            {{page-controls page=page clampedPages=clampedPages loadPage=(action 'loadPage')}}
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
