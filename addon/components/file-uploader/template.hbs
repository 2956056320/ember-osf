{{yield}}
{{#if currentUploads}}
    <h3>Uploads</h3>
    <ul>
        {{#each currentUploads as |upload|}}
            <li>{{upload.name}}</li>
        {{/each}}
    </ul>
{{/if}}
{{#if errors}}
    <h3>Errors</h3>
    <ul>
        {{#each errors as |error|}}
            <li>{{error}}</li>
        {{/each}}
    </ul>
{{/if}}
