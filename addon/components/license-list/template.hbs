
<select class="form-control" onchange={{action 'select' this}}>
    {{#if showCategories}}
        {{#each categories as |category|}}
            {{#if category.title}}
                <optgroup label={{category.title}}>
                {{#each category.licenses as |license|}}
                    <option value={{license.id}}>{{license.name}}</option>
                {{/each}}
                </optgroup>
            {{else}}
                {{#each category.licenses as |license|}}
                    <option value={{license.id}}>{{license.name}}</option>
                {{/each}}
            {{/if}}
        {{/each}}
    {{else}}
        {{#each licenses as |license|}}
            <option value={{license.id}}>{{license.name}}</option>
        {{/each}}
    {{/if}}
</select>
