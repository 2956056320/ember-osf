{{#each tags as |tag|}}
    <span>
        {{tag}}
        <button type="button" {{action "removeATag" tag}} class="btn btn-default btn-sm">
            <i class="glyphicon glyphicon-remove"></i>
        </button>
    </span>
{{/each}}
<br>
<br>
<p>
    {{input value=newTag}}
    <button {{action "addATag" newTag}} class="btn btn-primary">Add</button>
</p>
