<div class="panel">
  <h2>File detail: {{model.name}}</h2>
  <p><label>Kind: </label>{{model.kind}}</p>
  <p><label>Provider: </label>{{model.provider}}</p>
  <p><label>Path: </label>{{model.path}}</p>
  <p><label>Materialized path: </label>{{model.materializedPath}}</p>
  <p><label>Last touched: </label>{{model.lastTouched}}</p>
  <p><label>Date modified: </label>{{model.dateModified}}</p>
  <p><label>Date created: </label>{{model.dateCreated}}</p>
  <p><label>Checkout: </label>{{model.checkout}}</p>

  <hr />

  <h3>Actions</h3>
  <p>
    Rename: {{input value=newName}}
    <button {{action "rename" newName}} class="btn btn-primary">
        Rename</button>
  </p>
  <p>
    Delete: <button {{action "deleteFile"}} class="btn btn-primary">
        Delete</button>
  </p>
  {{#if model.isFolder}}
    <p>
      New folder: {{input value=newFolderName}}
      <button {{action "addSubfolder" newFolderName}} class="btn btn-primary">
          Add folder</button>
    </p>

    <hr />
    <h3>Files</h3>
    {{files-tree model=model}}
  {{else}}
    <hr />
    <h3>Versions</h3>
    <ul>
    {{#each model.versions as |version|}}
      <li>
          <div><label>ID: </label>{{version.id}}</div>
          <div><label>Size: </label>{{version.size}}</div>
          <div><label>Content type: </label>{{version.contentType}}</div>
      </li>
    {{else}}
      (none)
    {{/each}}
    </ul>
    <hr />
    <h3>Comments</h3>
    <ul>
    {{#each model.comments as |comment|}}
      <li>
          <label>{{comment.dateCreated}}: </label>
          {{comment.content}}
      </li>
    {{else}}
      (none)
    {{/each}}
    </ul>
  {{/if}}
</div>
